.root-wrapper{
  min-height: 100vh;
  overflow: hidden;
}

.header-wrapper{
  background-blend-mode:multiply;
  height: 350rpx;
  color:rgb(58, 58, 58);
}
.background{
  height: 350rpx;
  z-index:-9;
  position:absolute;
  overflow: hidden;
}
.user-info{
  padding:50px 0 80px 0;
  display: flex;
  justify-content: space-around;
  align-items: center;
}
.avatar-wrapper{
  height: 100px;
  width: 100px;
  border-radius: 50%;
  background: linear-gradient( rgba(255, 255, 255,1), rgba(255, 247, 247, 0.8));
  overflow: hidden;
  box-shadow: 0px 2px 2px 1px rgb(87, 83, 83);
}
.image{
  width:100px;
  height:100px;
  border-radius: 50%;
  background: linear-gradient( rgba(149, 227, 255, 0.8), rgba(231, 231, 231, 0.8));
}
.username-wrapper{
  font-size: 30px;
  color: rgb(27, 24, 24);
  background-color: rgba(128, 128, 128, 0.2);
}
.username{
  min-width: 120px;
  height: 40px;
  border-radius: 40px 0px 30px 0;
  background: linear-gradient(to right ,#b1d4e2, #b6ffd5,#c6ffbf,#ffad7e) ;
  display: flex;
  justify-content: center;
  box-shadow: 0px 1px 2px 1px rgb(129, 127, 127);
}

.body-wrapper{
  margin-top:10vh;
  box-sizing:border-box;
  padding: 0 15px 0 15px;
}
.list-wrapper{
  margin: 12px 0;
}
 /*background-color: #444141;*/
.list{
  height: 24px;
  border-radius: 25px;
  background: linear-gradient(to right, #fff4c3,#ffc3df, #acbbff,#1fcfff) ;
  display:flex;
  justify-content:space-between;
  align-items: center;
  color: rgb(27, 24, 24);
  padding: 10px 20px;
  box-shadow: -2px 0px 1px 1px rgba(196, 196, 196, 0.7);

}
.line{
  width: 100%;
  height: 1px;
  background-color: rgb(170, 170, 170);
  box-shadow: 1px 1px 6px 5px rgba(121, 121, 121, 0.3);
}