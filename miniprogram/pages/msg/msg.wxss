.title{
  padding-top: 10px;
  width: 100%;
  height: 40px;
  color: black;
  font-size: 24px;
  display: flex;
  border-radius: 5px 5px 5px 5px;
  justify-content: center;
  background: linear-gradient(to right, #fff4c3,#ffc3df, #acbbff,#1fcfff) ;
  box-shadow:5px 5px 12px 1px rgba(158, 236, 255, 0.8),
            inset 3px 5px 8px  rgba(255, 250, 252, 0.8),
            inset -3px -2px 2px rgba(134, 134, 134, 0.6)
}

.body{
  padding-top: 2px;
  box-shadow:5px 5px 20px 1px rgba(156, 156, 156, 0.4),
            inset 5px 5px 15px  #ffd9cf,
            inset -1px -1px 5px #979797
}

.msginfo{
  font-size: 14px;
  color: #505050;
  display: flex;
  justify-content:left;
  background-color: #fff7f7;
}

.foot{
  padding-top: 8px;
  font-size: 12px;
  color: #505050;
  display: flex;
  justify-content: center;
}