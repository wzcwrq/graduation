.root{
  width:100%;
}
.header{
  display: flex;
  background-color: rgb(37, 74, 184);
}

.bt{
  width: 50%;
  height: 50px;
}

.body{
  padding: 1px 0 1px 0;
}


.container{
  align-items: center;
  box-shadow: 10px 10px 12px rgba(rgb(26, 9, 9));
}

.canvas{

  height: 220px;
  background-color: #ffffff;
}
.line{
  width: 100%;
  height: 1px;
  background:linear-gradient(rgb(241, 121, 91),rgb(255, 146, 57));
}

.notice-wrapper{
  padding-top: 25px;
  width: 94%;
  padding-left: 3%;
  top: 300px;
  position: absolute;
}
.lian{
  top:-1px;
  left:14%;
  position: absolute;
  z-index: 10;
  
}
.lianjie{
  width: 30px;
  height: 30px;
}
.notice{
  width: 91%;
  position: absolute;
  padding-left: 6%;
  border-radius: 45px 45px 15px 15px ;
  background:linear-gradient(rgb(253, 254, 255),rgba(193, 230, 255, 0.6));
  box-shadow:5px 5px 10px 10px rgba(223, 223, 223, 0.4),
            -2px -2px 1px #f1f1f1,
            inset -3px -1px 6px #c3c3da
}
.hole{
  width: 40%;
  margin-left: -6%;
  height: 20px;
  background:linear-gradient(rgb(211, 211, 211),rgba(240, 240, 240, 0.4));
  display: flex;
  justify-content: space-around;
  border-radius: 10px;
}
.content-wrapper{
  display: flex;
  height: 55px;
  justify-content: space-around;
}

.content{
  width: 50%;
  color: #010101;
  height: 44px;
  font-size: 18px;
}