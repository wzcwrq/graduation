<!--pages/logout/surelogout/surelogout.wxml-->
<view>
  <van-cell-group>

  <van-field
    value="{{ account }}"
    label="账号："
  />
  <van-field
    value="{{ phonenumber }}"
    label="手机号码："
  />

  <van-field
    type="password"
    label="密码"
    placeholder="请输入密码"
    required
    bind:blur="oncheck"
  />
</van-cell-group>
<view style="padding-top: 20%;">
<van-button type="primary" size="large" bindtap="clear">确定</van-button>
</view>
</view>
