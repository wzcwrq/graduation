/* packageA/pages/alarm/alarm.wxss */
.root{
  width: 100%;
  position: absolute;
}
.header{
  width: 94%;
  margin-left: 3%;
  height: 42px;
  background: linear-gradient(to right ,#a6ffdd, #b6e2ff,#d0beff,#ff9b94) ;
  border-radius: 50px 50px 50px 50px ;
}
.body{
  width: 100%;
  display: flex;
  justify-content: space-around;
}

.notice-wrapper{
  width: 94%;
  padding-left: 3%;
  position: absolute;
}
.notice{
  width: 91%;
  padding-left: 6%;
  border-radius: 45px 45px 15px 15px ;
  position: absolute;
  background:linear-gradient(rgb(253, 254, 255),rgba(193, 230, 255, 0.6));
  box-shadow:5px 5px 10px 10px rgba(223, 223, 223, 0.4),
            -2px -2px 1px #f1f1f1,
            inset -3px -1px 6px #c3c3da
}
.hole{
  width: 40%;
  margin-left: -6%;
  height: 20px;
  background:linear-gradient(rgb(211, 211, 211),rgba(240, 240, 240, 0.4));
  display: flex;
  justify-content: space-around;
  border-radius: 10px;
}
.content-wrapper{
  display: flex;
  height: 55px;
  justify-content: space-evenly;
}

.content{
  width: 50%;
  color: #010101;
  height: 44px;
  font-size: 18px;
}






.foot{
  width: 100%;
  height: 42px;
  position: relative;
  background-color: aqua;
}